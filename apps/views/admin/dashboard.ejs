<!DOCTYPE html>
<html>

<head>
    <title></title>

    <%- include layout/head %>
</head>

<body>

    <div class="container">
        <%- include layout/nav %>

            <div class="row" style="margin-bottom: 10px;">
                <div class="col-md-12">
                    <a href="/admin/post/new" class="btn btn-success pull-right"> Add new Post </a>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    Posts
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Title</th>
                                    <th>Content</th>
                                    <th>Author</th>
                                    <th>phone</th>
                                    <th>Image</th>
                                    <th>Image1</th>
                                    <th>Price</th>
                                    <th>Area</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (data && data.posts){%>
                                    <% for(var i = 0; i < data.posts.length; i++){%>
                                        <tr>
                                            <td>
                                                <%= data.posts[i].id%>
                                            </td>
                                            <td>
                                                <%= data.posts[i].title%>
                                            </td>
                                            <td>
                                                <%= data.posts[i].content%>
                                            </td>
                                            <td>
                                                <%= data.posts[i].author%>
                                            </td>
                                            <td>
                                                <%= data.posts[i].phone%>
                                            </td>
                                            <td> <img src="../<%= data.posts[i].image%> " width="150px" height="150px" alt=""></td>
                                            <td> <img src="../<%= data.posts[i].image1%> " width="150px" height="150px" alt=""></td>
                                            <td>
                                                <%= data.posts[i].price%>
                                            </td>
                                            <td>
                                                <%= data.posts[i].area%>
                                            </td>
                                            <td>
                                                <a href="/admin/post/edit/<%= data.posts[i].id%>" class="btn btn-primary"> Edit </a>
                                                <button class="btn btn-danger post_delete" post_id="<%= data.posts[i].id%>"> Delete </button>
                                            </td>
                                        </tr>
                                        <%}%>
                                            <%}%>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
    </div>


    <script type="text/javascript" src="/static/js/post.js"></script>
</body>

</html>
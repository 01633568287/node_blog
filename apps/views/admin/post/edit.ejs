<!DOCTYPE html>
<html>

<head>
    <title></title>
    <%- include ../layout/head %>

        <script src="//cdn.tinymce.com/4/tinymce.min.js"></script>
        <script>
            tinymce.init({
                selector: 'textarea'
            });
        </script>
</head>

<body>
    <div class="container">
        <%- include ../layout/nav %>

            <div class="panel panel-default">
                <div class="panel-heading">
                    Edit Post
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <% if (data && data.error){ %>
                                <div id="login-alert" class="alert alert-danger col-sm-12">
                                    <%= data.error%>
                                </div>
                                <%}%>

                                    <form role="form" method="" action="">
                                        <input class="id" type="hidden" name="id" value="<% if (data && data.post){%><%= data.post.id%><%}%>">

                                        <div class="form-group">
                                            <label>Tên</label>
                                            <input class="form-control title" name="title" placeholder="Title" value="<% if (data && data.post){%><%= data.post.title%><%}%>">
                                        </div>
                                        <div class="form-group">
                                            <label>Nội dung</label>
                                            <textarea class="form-control content" name="content" placeholder="Content"><% if (data && data.post){%><%= data.post.content%><%}%></textarea>
                                        </div>
                                        <div class="form-group">
                                            <label>Tác giả</label>
                                            <input class="form-control author" name="author" placeholder="Author" value="<% if (data && data.post){%><%= data.post.author%><%}%>">
                                        </div>
                                        <div class="form-group">
                                            <label>Phone</label>
                                            <input class="form-control phone" name="phone" placeholder="Phone" value="<% if (data && data.post){%><%= data.post.phone%><%}%>">
                                        </div>
                                        <div class="form-group">
                                            <label>Image</label>:
                                            <% if (data && data.post){%>
                                                <%= data.post.image%>
                                                    <%}%>
                                                        <input type="file" class="form-control image" name="image" placeholder="image" value="<% if (data && data.post){%><%= data.post.image%><%}%>">
                                        </div>
                                        <div class="form-group">
                                            <label>Image1</label>:
                                            <% if (data && data.post){%>
                                                <%= data.post.image1%>
                                                    <%}%>
                                                        <input type="file" class="form-control image1" name="image1" placeholder="Image1" value="<% if (data && data.post){%><%= data.post.image1%><%}%>">
                                        </div>

                                        <div class="form-group">
                                            <label>Price</label>
                                            <input class="form-control price" name="price" placeholder="Price" value="<% if (data && data.post){%><%= data.post.price%><%}%>">
                                        </div>
                                        <div class="form-group">
                                            <label>Diện tích</label>
                                            <input class="form-control area" name="area" placeholder="Area" value="<% if (data && data.post){%><%= data.post.area%><%}%>">
                                        </div>

                                        <input type="button" name="" value="Edit" class="btn btn-success post_edit" />
                                    </form>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
    </div>

    <script type="text/javascript" src="/static/js/post.js"></script>

</body>

</html>